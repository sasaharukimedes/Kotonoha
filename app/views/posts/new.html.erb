<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">手紙を書く</h1>
    <%= form_tag ("/posts/create") do %>
      <div class="form">
        <div class="form-body">
          <label for="textarea-without-border">枠線入れたい</label>
          <textarea name = "content"></textarea>
          <input type="submit" value="投函する">
        </div>
      </div>
    <% end %>
  </div>
</div>