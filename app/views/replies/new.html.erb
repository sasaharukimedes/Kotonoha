<div class="main replies-new">
  <div class="container">
    <h1 class="form-heading">返事を書く</h1>
    <%=  form_with scope: :reply, url: post_replies_path, local: true do |form| %>
      <% if @reply.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@reply.errors.count, "error") %> prohibited this reply from being saved:</h2>
        <ul>
        <% @reply.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form">
        <div class="form-body">
            <%= form.label :宛名 %><br>
            <%= form.text_field :dear , placeholder: "へ"%>

            <%= form.label :本文 %><br>
            <%= form.text_area :content, placeholder: "あなたの大切な人にかけるような言葉で書きましょう！" %>

            <%= form.label :差出人 %><br>
            <%= form.text_field :from, placeholder: "#{current_user.username} より" %>

            <%= form.submit value="投函する" %>
        </div>
      </div>
    <% end %>
  </div>
</div>